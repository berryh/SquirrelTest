<UserControl x:Class="SquirrelTest.InfoBalloon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SquirrelTest"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="300" Height="125" Margin="0,0,25,75">
    <Grid Background="White" MouseEnter="Grid_MouseEnter">
        <Label Content="The update is installed" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="15" FontWeight="Bold"/>
        <Label Content="Would you like to restart?" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ButtonNo" Content="No" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top" Width="130" Click="ButtonNo_Click"/>
        <Button x:Name="ButtonYes" Content="Yes" HorizontalAlignment="Left" Margin="160,95,0,0" VerticalAlignment="Top" Width="130" IsDefault="True" Click="ButtonYes_Click"/>

    </Grid>
</UserControl>
